{
    "name": "Java Codespace",
    "image": "mcr.microsoft.com/vscode/devcontainers/java:17",
    "features": {
        "maven": "latest"
    },
    "postCreateCommand": "echo 'Java Codespace ready!'",
    "forwardPorts": [8080],
    "extensions": [
        "vscjava.vscode-java-pack",
        "vscjava.vscode-spring-initializr",
        "pivotal.vscode-spring-boot"
    ]
}
